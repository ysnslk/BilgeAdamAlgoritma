package lesson015.veteriner;

public class Main {
	
	public static void bilgileriGoster(Hayvan hayvan) {
		hayvan.bilgileriGoster();
	}
	
	public static void karneOlustur(Hayvan hayvan) {
		hayvan.karneOlustur();
	}

	public static void main(String[] args) {

		/*
		 * Hayvan sınıfından 2 tane abstract method oluşturalım
		 * bilgileriGoster() toString
		 * karneOlustur() --> Cins ve tür alıp bize karne oluştursun
		 */
		
		
		Kedi kedi1 = new Kedi("Boncuk",true,"2010","Tekir");
		Kedi kedi2 = new Kedi("Fıstık",true,"2010","Tekir");
		Kedi kedi3 = new Kedi("Yaeamaz",true,"2010","Tekir");
		
		kedi1.bilgileriGoster();

	}

}
