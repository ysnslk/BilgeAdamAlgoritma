package lesson012;

public class Pizza {
	
	
	private int price;
	private boolean isNormal;
	public int getPrice() {
		return price;
	}
	public void setPrice(int price) {
		if (isNormal) {
			this.price = 200;
		}
		else {
			this.price = 300;
		}
		
	}
	public boolean isNormal(boolean isNormal) {
		return isNormal;
	}
	@Override
	public String toString() {
		return "Pizza [price=" + price + ", isNormal=" + isNormal + "]";
	}
	
	
	
	
}
