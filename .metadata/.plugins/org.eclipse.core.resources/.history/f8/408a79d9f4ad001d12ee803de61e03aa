package lesson010;

public class Profile {

	// attribute , property ,field
	// Gerekli attributeleri tanımlayalım
	
	public String uName;
	public String name;
	public String description;
	public String profilePicture;
	public int follows;
	public int followers;
	public String[] posts = new String[10];
	public int postValue = posts.length;
	public String[] stories  = new String[10];
	public int storiesValue = stories.length;

	@Override
	public String toString() {
		return "Profil : Kullanıcı Adı : " + uName + ", İsim : " + name + ", Açıklama : " + description + ", Profil Resmi : "
				+ profilePicture + ", Takip Edilen : " + follows + ", Takipçiler : " + followers + ", Gönderiler : " + postValue
				+ ", Hikayeler : " + storiesValue ;
	}
	
	public static void postOlustur(String name) {
		System.out.println(name + " Post oluşturdu.");
	}
	
	public void profilIsminiGuncelle(String name) {
		this.name = name;
	}
	
	//post oluştur metodu 
	//isim--> Post oluşturdu
	//profilIsminiGuncelle metdo
	//Metod isim alacak ismini güncelleyecek
	
	//gelenIstegiKabulEt
	//Takipçi sayısı artacak

}
