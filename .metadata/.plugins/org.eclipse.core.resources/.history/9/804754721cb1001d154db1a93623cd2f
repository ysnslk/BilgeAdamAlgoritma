package lesson012;

public class Pizza {
	
	
	private int price;
	private boolean isVeg;
	private static int normalFiyat = 200;
	private static int vegiFiyat = 200;
	
	Public Pizza() {
		
	}
	Public Pizza(boolean isVeg) {
			this.isVeg = isVeg;
			if(this.isVeg) {
				this.setPrice(vegiFiyat);
			}
			else {
				this.setPrice(normalFiyat);
			}
	}
		
	
	
	public int getPrice() {
		return price;
	}
	public void setPrice(int price) {
		this.price = price;
	}
	public boolean isNormal() {
		return isNormal;
	}
	public void setNormal(boolean isNormal) {
		this.isNormal = isNormal;
	}
}
