package lesson014;

public class UserManager {

	public void generateAutoEmail(User user) {
		if(user.getName().contains(" ") || user.getSurName().contains(" ")) {
			user.getName().replace(" ",".");
			user.getSurName().replace(" ",".");
			user.setEmail(user.getName().toLowerCase() + '.' + user.getSurName().toLowerCase() + "@xbanka.com");
		}
		else {
			user.setEmail(user.getName().toLowerCase() + '.' + user.getSurName().toLowerCase() + "@xbanka.com");
		}
	}
}
