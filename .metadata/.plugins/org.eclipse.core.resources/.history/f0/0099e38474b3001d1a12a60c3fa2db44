package lesson014;

public class UserManager {
	
	private final String emailFormat = "@xbanka.com";

	public void generateAutoEmail(User user) {
		if(user.getName().contains(" ") || user.getSurName().contains(" ")) {

			user.setEmail(user.getName().toLowerCase().replace(" ",".") + '.' + user.getSurName().toLowerCase().replace(" ",".") +emailFormat);
	}
}
