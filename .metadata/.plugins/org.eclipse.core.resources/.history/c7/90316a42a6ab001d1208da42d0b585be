package lesson008;

import java.util.Random;
import java.util.Scanner;

public class Question65 {
	
	public static double randomSayiUret(double[] randomDizi) {
		Random rnd = new Random();
		double toplam=0;
		for (int i = 0; i < randomDizi.length; i++) {
			randomDizi[i] = rnd.nextDouble(1,501);
			toplam+=randomDizi[i] ;
		}
		double ortalama = toplam / randomDizi.length;
		return ortalama;
	}

	public static void randomSayilariGetir() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Lütfen Dizinin boyutunu giriniz.");
		double[] randomDizi = new double [sc.nextInt()] ;
	}
	
	public static void main(String[] args) {

		//randomSayıUret metodu yazalım 1 500 
		// Ortalamahesapla

		// Kullanıcıdan kaç tane sayıyla işlem yapmasını istediğini soralım
		// Random sayılar bu arraye atılacak
		// Ortalama hesaplanıcak

	}

}
